<Window x:Class="AnimalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animal App" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Animal Type:"/>
            <ComboBox x:Name="animalTypeComboBox" Width="200" Margin="0 5 0 10">
                <ComboBoxItem Content="Mammal"/>
                <ComboBoxItem Content="Bird"/>
                <ComboBoxItem Content="Amphibian"/>
                <ComboBoxItem Content="Unknown"/>
            </ComboBox>
            <TextBlock Text="Name:"/>
            <TextBox x:Name="nameTextBox" Width="200" Margin="0 5 0 10"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Add" Width="100" Margin="0 5 10 0" Click="AddButton_Click"/>
                <Button Content="Display" Width="100" Margin="0 5 0 0" Click="DisplayButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
